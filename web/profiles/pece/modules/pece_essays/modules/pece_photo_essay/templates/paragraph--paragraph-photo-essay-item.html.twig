{% extends 'paragraph.html.twig' %}

{% set imagepath = path('entity.node.canonical', {'node':  content.field_pece_image_artifact.0['#node'].id}) %}

{% block content %}
  <div class="columns is-justify-content-center">
    <div class="column is-half img-container">
      {{content.field_pece_image_artifact}}
    </div>
    <div class="column is-one-third">
     <h2{{ title_attributes }}>
      <a href="{{ imagepath }}" rel="bookmark">{{ content.field_pece_image_artifact.0['#node'].label }}</a>
    </h2>
      {{content.field_pece_description}}
    </div>
  </div>
{% endblock %}
